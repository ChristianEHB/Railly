<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.naits.railly.HomeActivity"
    android:background="#d1d1d1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="UselessParent"
            android:id="@+id/boven"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                android:text="@string/text_from"
                tools:ignore="RtlHardcoded"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="@string/text_to"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnSpan="2"
                android:layout_marginLeft="10dp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:text="@string/view_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="18sp" />

            <TextView
                android:text="@string/view_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="18sp" />

            <TextView
                android:text="@string/view_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="5"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:id="@+id/editText3"
                android:layout_row="2"
                android:layout_column="1"
                android:textAlignment="center"
                android:background="@null"
                android:text="@string/text_hour"
                tools:ignore="RtlHardcoded"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:ems="5"
                android:id="@+id/editText4"
                android:layout_row="2"
                android:layout_column="2"
                android:text="@string/text_date"
                android:background="@null"
                tools:ignore="RtlHardcoded" />
        </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boven"
        android:layout_marginTop="10dp">
        <TextView
            android:text="@string/view_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="18sp" />
        <TextView
            android:text="@string/view_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="18sp" />
        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autocomplete_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:ems="10"
            android:layout_marginLeft="10dp"/>
        <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/autocomplete_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:layout_marginLeft="10dp"/>


    </GridLayout>


    <Button
        android:text="@string/button_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button"
        android:width="150dp"
        android:height="50dp"
        android:onClick="searchOnClick"
        />
</RelativeLayout>
