<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live_boards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1d1d1"
    tools:context="com.example.naits.railly.LiveBoardsActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="layout.MenuFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/fragmentMenu"
        tools:layout="@layout/fragment_menu"
        android:layout_margin="15dp"/>

    <TextView
        android:text="@string/live_board"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:id="@+id/textViewLiveBoard"
        android:background="#ffffff"
        android:textAlignment="center"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:textColor="#009933"
        android:layout_below="@+id/fragmentMenu"
        android:layout_alignLeft="@+id/fragmentMenu"
        android:layout_alignStart="@+id/fragmentMenu" />

    <ListView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:id="@+id/listView_liveboard"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/textViewLiveBoard"
        android:layout_alignLeft="@+id/textViewLiveBoard"
        android:layout_alignStart="@+id/textViewLiveBoard" />


</RelativeLayout>
