<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_hour"
            android:text="17:50"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_row="0"
            />
        <TextView
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_destination"
            android:text="Brussel-Zuid"
            android:textSize="20sp"
            android:layout_column="1"
            android:layout_row="0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_platform"
            android:text="Plat. 9"
            android:textSize="20sp"
            android:layout_column="2"
            android:layout_row="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_canceled"
            android:text="Canceled "
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="#009933"
            android:layout_column="1"
            android:layout_row="1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_delay"
            android:text="On time "
            android:textSize="16sp"
            android:textColor="#009933"
            android:layout_column="2"
            android:layout_row="1"
            />
    </GridLayout>

</LinearLayout>