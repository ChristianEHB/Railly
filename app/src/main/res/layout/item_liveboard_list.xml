<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#ffffff">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_hour"
            android:text="17:50"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_column="0"
            android:layout_row="0"
            />
        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_destination"
            android:text="Brussel-Zuid"
            android:textSize="18sp"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="#00a7f5"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_platform"
            android:text="Plat. 10"
            android:textSize="17sp"
            android:layout_column="2"
            android:layout_row="0"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_canceled"
            android:text="- "
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="1"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/liveboard_item_delay"
            android:text="On time "
            android:textSize="15sp"
            android:textColor="#009933"
            android:layout_column="2"
            android:layout_row="1"
            android:textStyle="bold"

            />
    </GridLayout>

</LinearLayout>